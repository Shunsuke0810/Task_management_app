<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<p>検索</p>
<%= form_tag(tasks_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Title<br><br></th>
      <th>Content<br><br></th>
      <th>Period
      <br>
      <%= link_to '並替え', tasks_path(sort_update: "true") %>
      </th>
      <th>Status<br><br></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.period %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
