<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<p>検索</p>
<%= form_with url: tasks_path, method: :get, local: true do |form| %>
 <div class="field">
    <%= form.label :title %>
     <%= form.text_field :search_title %>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :search_status, options_for_select(Task.statuses.keys.to_a), {prompt: "選択してください"}, {class: 'task-select'}%>
  </div>
   <div class="actions">
    <%= form.submit %>
  </div>
  
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Title<br><br></th>
      <th>Content<br><br></th>
      <th>Period
      <br>
      <%= link_to '並替え', tasks_path(sort_period: "true") %>
      </th>
      <th>Status<br><br></th>
      <th>Priority
      <br>
      <%= link_to '並替え', tasks_path(sort_priority: "true") %>
      <br></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%= paginate @tasks %>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.period %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
