 
 <p>ユーザー一覧</p>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>email</th>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <%# <td><%= link_to 'Edit', edit_user_path(user.id), class: "btn btn-success" %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
